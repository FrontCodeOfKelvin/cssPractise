@import 'mixins'

header
    background: gold;
    text-align: center;
    font-size: 2em;
    semi-transparent-border(.3em)
nav
    border 1px solid #fff
    display: flex
    flex-flow: row-reverse wrap
    a
        margin-left .1em
        background-color:hotpink;
        color:aliceblue;
        padding: .7rem;
        semi-transparent-border(.3em)
        &.rule
            background-color mediumseagreen
        &.other
            background-color #20a0ff
        &.lib
            background:
                repeating-radial-gradient(
                    circle at top left,
                    cyan,
                    yellow 2em,
                    magenta 4em,
                    cyan 6em
                ),
                repeating-radial-gradient(
                    circle at bottom left,
                    cyan,
                    yellow 2em,
                    magenta 4em,
                    cyan 6em
                ),
                repeating-radial-gradient(
                    circle at top right,
                    cyan,
                    yellow 2em,
                    magenta 4em,
                    cyan 6em
                ),
                repeating-radial-gradient(
                    circle at bottom right,
                    cyan,
                    yellow 2em,
                    magenta 4em,
                    cyan 6em
                );
            background-blend-mode: multiply;
               
topics
    width 13em
    z-index 1
    position fixed
    top 8.1em
    display flex
    flex-flow: column nowrap
    topic
        color: black
        font-weight: bold
        font-size: .9em
        line-height: 1.3em
        margin-top .5em
        box-shadow: .1em .1em 1em .1em green inset 
        padding .3em .5em
        border-top-right-radius: 2em
        border-bottom-right-radius: 2em
        &:nth-child(1)
            background: $color1
        &:nth-child(2)
            background: $color2
        &:nth-child(3)
            background: $color3
        &:nth-child(4)
            background: $color4
        &:nth-child(5)
            background: $color5
main
    position: absolute
    bottom 0
    width 100%
    top: 6em
    background: white;
    semi-transparent-border(2em)
    border-left-width: 13em
    display flex
    flex-flow: row wrap
    align-content: baseline;
    box
        padding 1em
        width 15em
        height 15em
        semi-transparent-border(.3em)
        div
            height: 12.5em
        &:nth-child(1)
            background-color: $colord1
        &:nth-child(2)
            background-color: $colord2
        &:nth-child(3)
            background-color: $colord3
        &:nth-child(4)
            background-color: $colord4
        &:nth-child(5)
            background-color: $colord5
        &:nth-child(6)
            background-color: $colord6
        &:nth-child(7)
            background-color: $colord7
        &:nth-child(8)
            background-color: $colord8
        &:nth-child(9)
            background-color: $colord9
aside
    background:
        repeating-linear-gradient(
            -45deg,
            transparent,
            transparent 25%,
            tomato 0,
            tomato 50%
        ),
        repeating-linear-gradient(
            45deg,
            transparent,
            transparent 25%,
            dodgerblue 0,
            dodgerblue 50%
        ), wheat;

    background-size: 10em 10em;
    background-blend-mode: multiply;
    position: fixed
    right: 0
    width: 3em
    height:25em
    &:hover
        mark
            display block
    mark
        display: none
        position absolute
        z-index:1
        top 5em
        right 5em
        box-shadow: 0 0 3em 1em red
        stitch-box(28em)