@import 'mixins'

header
    background: gold;
    text-align: center;
    font-size: 2em;
    semi-transparent-border(.3em)
nav
    border 1px solid #fff
    display: block
    a
        float right
        margin-left .1em
        background-color:hotpink;
        color:aliceblue;
        padding: .7rem;
        semi-transparent-border(.3em)
        &.rule
            background-color mediumseagreen
        &.other
            background-color #20a0ff
main
    position: absolute
    bottom 0
    width 100%
    top: 6em
    background: white;
    semi-transparent-border(2em)