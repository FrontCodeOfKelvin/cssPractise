@import '0common/stylus'

body
    background: $colord1
    main
        box
            width:15em
            &:nth-child(1)
                border-radius: 1.3em
                box-shadow 0 0 0 1em #655
            &:nth-child(2)
                border-radius: .8em
                box-shadow 0 0 0 1em tan
                outline: 1em solid tan;
            &:nth-child(3)
                border-radius: 1em
                outline: .5em solid $color-semi-transparent
                box-shadow: 0 0 0 .5em $color-semi-transparent