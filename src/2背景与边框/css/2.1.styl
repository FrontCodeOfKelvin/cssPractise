body{
    background: url('../images/stone-art.jpg') no-repeat;
    background-size: cover;
    margin: 0;
}
header{
    z-index: 1;
    text-align: center;
    font-size: 2em;
    background: gold;
    margin: 0 3em;
    margin-top: .15em;

    box-sizing:border-box;
    border: .3em solid hsla(0, 0%, 100%, .5);
    background-clip: padding-box;
}
body>a{
    position: fixed;
    top: 3em;
    right: 4em;
    z-index: 1;

    background-color:hotpink;
    color:aliceblue;
    padding: 1rem;

    box-sizing:border-box;
    border: 1em solid hsla(0, 0%, 100%, .5);
    background-clip: padding-box;
}
a:nth-child(3){
    right: 15em;
    background-color:mediumseagreen;
}
div {
    top: 10%;
    left: 10%;
    background: white;
    margin: 0;
    position: absolute;
    width: 80%;
    height: 80%;

    box-sizing:border-box;
    border: 5em solid hsla(0, 0%, 100%, .5);
    background-clip: padding-box;
}