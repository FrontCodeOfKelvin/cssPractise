@import '0common/stylus'

body
    background: $colord2
    main
        box
            background: #fff!important
            width 18em
            div
                position: relative
                width: 100%
                height: 100%
                font-size: .7em
            &:nth-child(1)
                div
                    background: linear-gradient(#fb3,#58a)
            &:nth-child(2)
                div
                    background: linear-gradient(#fb3 20%,#58a 80%)
            &:nth-child(3)
                div
                    background: linear-gradient(#fb3 50%,#58a 50%)
            &:nth-child(4)
                div
                    background: linear-gradient(#fb3 50%,#58a 50%)
                    background-size: 100% 30px
            &:nth-child(5)
                div
                    background: linear-gradient(#fb3 33.3%,#58a 0)
                    background-size: 100% 30px
            &:nth-child(6)
                div
                    background: linear-gradient(#fb3 30%,
                                #58a 0, #58a 66.6%, yellowgreen 0)
                    background-size: 100% 45px
            &:nth-child(7)
                div
                    background: linear-gradient(to right,/* æˆ– 90deg */
                    #fb3 50%,#58a 50%)
                    background-size: 30px 100%
            &:nth-child(8)
                div
                    background: linear-gradient(45deg, #fb3 50%,#58a 50%)
                    background-size: 30px 30px
            &:nth-child(9)
                div
                    background: linear-gradient(45deg, #fb3 25%,#58a 0,#58a 50%, #fb3 0, #fb3 75%, #58a 0)
                    background-size: 30px 30px
            &:nth-child(10)
                div
                    background: linear-gradient(45deg, #fb3 25%,#58a 0,#58a 50%, #fb3 0, #fb3 75%, #58a 0)
                    background-size: 42.426406871px 42.426406871px
            &:nth-child(11)
                div
                    background: repeating-linear-gradient(45deg, #fb3 0, #fb3 25%, #58a 0, #58a 50%);
                    background-size: 42.426406871px 42.426406871px;
            &:nth-child(12)
                div
                    background: repeating-linear-gradient(30deg,#79b, #79b 15px, #58a 0, #58a 30px);
