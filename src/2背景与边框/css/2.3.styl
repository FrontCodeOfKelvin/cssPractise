@import '0common/stylus'

body
    background: skyblue
    main
        box
            &:nth-child(1)
                background: url(code-pirate.svg) no-repeat bottom right #58a
                background-position: right 20px bottom 10px
            &:nth-child(2)
                padding: 10px;
                background: url("code-pirate.svg") no-repeat #5aa bottom right; /* æˆ– 100% 100% */ 
                background-origin: content-box;
            &:nth-child(3)
                background: url("code-pirate.svg") no-repeat $colord3; 
                background-position: calc(100% - 20px) calc(100% - 10px);